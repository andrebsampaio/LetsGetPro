<% provide(:title, "Signup") %>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<div class="row">
  <div class="spacer100"></div>
  <div id="reg_area" class="col-md-2 col-xs-offset-5 centered">
    <div class="logo">lets <span class="get">GET</span>Pro</div>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
            <div class="error_area">
              <h2 class="error_title"><%= pluralize(@user.errors.count, "error") %> Errors in:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email , class:'form-control'%>
        </div>
        <div class="field">
          <%= f.hidden_field :password_digest %>
        </div>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, class:'form-control' %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, class:'form-control' %>
        </div>
        <div class="field">
          <%= f.label "Current Workplace" %><br>
          <%= f.text_field :workplace , class:'form-control'%>
        </div>
        <div class="field">
          <%= f.label "Image Url" %><br>
          <%= f.text_field :img_url , class:'form-control'%>
        </div>
        <div class="field">
          <%= f.label :company %><br>
          <%= f.collection_select  :id, Company.all, :id, :name, {prompt: "Select a Company"}, {class: "form-control"}  %>
        </div>
        <p>Or Start a New Comapany</p>
        <%= link_to "Create New Company", new_company_path, class:'btn btn-custom'%>
        <div class="actions">
          <br>
          <%= f.submit "Signup", class: "btn btn-large btn-custom" %>
        </div>
    <% end %>
  </div>
</div>