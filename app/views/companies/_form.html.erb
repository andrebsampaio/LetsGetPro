<div class="form_holder">
<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label "Since" %><br>
    <%= f.date_select :join_date, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :acronym %><br>
    <%= f.text_field :acronym, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label "Cellphone" %><br>
    <%= f.text_field :tel, class:'form-control' %>
  </div>
  <div class="field">
  <%= f.label :website %><br>
  <%= f.text_field :website, class:'form-control' %>
  </div>
  <div class="field">
   <%= f.label :description %><br>
   <%= f.text_area :description, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label "Image Url" %><br>
    <%= f.text_field :img_url, class:'form-control' %>
   </div>


  <div class="actions centered">
    <%= f.submit "Create Company", class: "btn btn-large btn-custom " %>
  </div>
<% end %>
</div>